<div class = "container">
  <div class = "row">
    <div class = "col-md-4 col-md-offset-4">
      <div class = "text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account and get access to ALL of our features.</p>
        <% else %>
           <h1>Basic Account</h1>
           <p>Sign up for free and get access to basic features.</p>
        <% end %>
      </div>
      
      <div class = "well">
          <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
        <% else %>
            <%= render "pro_form" %>
        <% end %>
      
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>